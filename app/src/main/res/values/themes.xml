<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PersonalAssistant" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/feldgrau</item>
        <item name="colorPrimaryVariant">@color/feldgrau</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/asparagus</item>
        <item name="colorSecondaryVariant">@color/yellow_green_crayola</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Button.CTA" parent="ThemeOverlay.AppCompat">
        <item name="colorPrimary">@color/feldgrau</item>
        <item name="textAllCaps">false</item>
    </style>
</resources>